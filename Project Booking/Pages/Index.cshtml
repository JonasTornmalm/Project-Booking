@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<style>
    .responsive {
        width: 100%;
    }
</style>

<div style="text-align:center;padding-bottom:50px">
    <h2>Welcome to Project Booking</h2>
</div>




@if (Model.HotelList.Count() > 0)
{
<div align="center" style="padding-bottom:50px">
    <a class="btn btn-primary" style="width: 50%; height: 40%; font-size : 20px;" asp-page="./Search">Search for hotels</a>

</div>

<div class="row">
    @foreach (var item in Model.HotelList)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100" >
                <a asp-page="./HotelDetails" asp-route-id="@item.Id"><img class="flex-column responsive" src=@item.HotelPictureBig height="300" ></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a asp-page="./HotelDetails" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.HotelName)</a>
                    </h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.HotelInfo)</p>
                </div>
                <div class="card-footer">
                    <table>
                        <tr>
                            <th scope="row">Price:</th>
                            <td>@item.RoomPrice kr</td>
                        </tr>
                        <tr>
                            <th scope="row">Location: </th>
                            <td>@item.City</td>
                        </tr>
                    </table>
                
                    <large>@Html.Raw(item.HotelStars)</large>
                </div>
            </div>
        </div>
    }
</div>
}
else
{
    <div class="container text-center">
        <a asp-page-handler="Seed" class="btn btn-dark w-25 m-1">Seed</a>
    </div>

}



