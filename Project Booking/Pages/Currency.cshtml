@page
@model Project_Booking.CurrencyModel
@{
    ViewData["Title"] = "Currency";
}

<h2 style="text-align: center; margin: 80px;">EURO EXCHANGE RATES TABLE</h2>

<style>
    tr:nth-child(even) {
        background-color: rgba(8, 153, 42, 0.3);
    }

    tr:nth-child(odd) {
        background-color: rgba(15, 89, 25, 0.3);
    }

    td {
        font-family: 'Times New Roman';
        font-size: larger;
        color: white;
    }
</style>


