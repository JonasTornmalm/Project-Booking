@page
@model MessageModel
@{
    ViewData["Title"] = "Message";

}

<partial name="_StatusMessage" for="StatusMessage" />

<form method="post">

    <div class="form-group">
        <label asp-for="Message.Title">Title</label>
        <input asp-for="Message.Title" class="form-control"  />
        <span asp-validation-for="Message.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message.MessageFromUser">Question</label>
        <input asp-for="Message.MessageFromUser" class="form-control"  />
        <span asp-validation-for="Message.MessageFromUser" class="text-danger"></span>
    </div>

    <button id="submitButton" type="submit" class="btn btn-primary">Confirm</button>
</form>