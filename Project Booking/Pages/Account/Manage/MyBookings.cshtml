@page
@model Project_Booking.MyBookingsModel
@{
    ViewData["Title"] = "MyBookings";
    ViewData["ActivePage"] = ManageNavPages.MyBookings;
}

<h4>My Bookings</h4>
<partial name="_StatusMessage" for="StatusMessage" />


<table id="table" class="table table-striped mt-5">
    <thead>
        <tr id="booking-table">
            <th>Hotel</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody style="background-color:lightgray">
        @foreach (var booking in Model.CurrentUser.MyBookings)
        {
        <tr id="booking-list">
            <td>@booking.HotelID</td>
            <td><a asp-page="./Details" asp-route-id="@booking.ID">View</a></td>
            <td><a asp-page="./Edit" asp-route-id="@booking.ID">Edit</a></td>
            <td><a asp-page="./Delete" asp-route-id="@booking.ID">Delete</a></td>
        </tr>
        }
    </tbody>
</table>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
